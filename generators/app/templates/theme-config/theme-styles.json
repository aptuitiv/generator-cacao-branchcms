{
    "groups": [
        {
            "name": "Navigation - Dropdowns",
            "description": "Styles for dropdowns in the main navigation.",
            "sections": [
                {
                    "name": "General",
                    "fields": [
                        {
                            "name": "dropdownFontWeight",
                            "label": "Font weight",
                            "type": "fontWeight",
                            "default": "400",
                            "fontFamilyField": "mainNavFontFamily",
                            "preview": {
                                "type": "css-head",
                                "cssVariable": "--Dropdown-fontWeight"
                            }
                        },
                        {
                            "name": "dropdownFontSize",
                            "label": "Font size",
                            "type": "stepper",
                            "after": "px",
                            "default": "15",
                            "preview": {
                                "type": "css-head",
                                "cssVariable": "--Dropdown-fontSize",
                                "template": "{{ value / 10 }}rem"
                            }
                        },
                        {
                            "name": "dropdownLineHeight",
                            "label": "Line height",
                            "type": "stepper",
                            "step": "0.1",
                            "decimals": "2",
                            "default": "1.5",
                            "preview": {
                                "type": "css-head",
                                "cssVariable": "--Dropdown-lineHeight"
                            }
                        },
                        {
                            "name": "dropdownTextTransform",
                            "label": "Text case",
                            "type": "select",
                            "default": "uppercase",
                            "options": {
                                "none": "Default",
                                "capitalize": "Capitalize",
                                "uppercase": "UPPERCASE",
                                "lowercase": "lowercase"
                            },
                            "preview": {
                                "type": "css-head",
                                "cssVariable": "--Dropdown-textTransform"
                            }
                        }
                    ]
                },
                {
                    "name": "Links",
                    "fields": [
                        {
